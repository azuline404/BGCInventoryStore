<div class="connect-container">
    <div class="connect-navigation">
        <ul>
            <br>
            <li id="list-1">
                <a onclick="get_option(1);">
                    <img src="/image/product-2.png">
                    <span class="connect-title2">Add Products</span>
                </a>
            </li>
            <br><br>
            <li id="list-2">
                <a onclick="get_option(2);">
                    <img src="/image/product-1.png">
                    <span class="connect-title2">Products info</span>
                </a>
            </li>
            <br><br>
            <li id="list-3">
                <a onclick="get_option(3);">
                    <img src="/image/box.png">
                    <span class="connect-title2">Process Orders</span>
                </a>
            </li>
            <br><br>
            <li id="list-4">
                <a onclick="get_option(4);">
                    <img src="/image/team.png">
                    <span class="connect-title2">View Admin</span>
                </a>
            </li>
            <br/>
            <li id="list-5">
                <a onclick="get_option(5);">
                    <img src="/image/camera.png">
                    <span class="connect-title2">Upload Image</span>
                </a>
            </li>
        </ul>
    </div>
    <div class="connect-main">
        <div class="topbar">
            <div class="connect-toggle" onclick="toggleMenu();"><img src="/image/menu-2.png"></div>
        </div>

        {{!-- Add product Page --}}
        <script src="/js/productsForm.js"></script>
        <form class="ml-5 mt-5" id="matter-1" action="/addProduct" method="post" enctype="application/x-www-form-urlencoded"
            id="jacketsForm">
            <div class="form-group">
                <label for="exampleFormControlInput1">Product Name</label>
                <input type="text" class="form-control" style="width: 800px" name="name" placeholder="Name" required>
            </div>
            <div style="height: 10px;">
                <img src="/image/add_product.png" style="margin: -70px 0 0 850px; width:200px; height: 200px;">
                <img src="/image/packaging.png" style="margin: -70px 0 0 1100px; width:80px; height: 80px;">
                <img src="/image/packaging.png" style="margin: -70px 0 0 1050px; width:80px; height: 80px;">
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Product Description</label>
                <textarea class="form-control" name="description" style="width: 800px" rows="3"
                    placeholder="Description" required></textarea>
            </div>

            <div class="form-group">
                <label for="exampleFormControlInput1">Product Value</label>
                <input type="number" class="form-control" style="width: 800px" name="value" min="0" placeholder="Value"
                    required>
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Product Category</label>
                <input type="text" class="form-control" style="width: 800px" name="category" placeholder="Category"
                    required>
            </div>
            <div id="rows-div">
                <div class="form-row">
                    <div class="form-group col-md-1.5">
                        <label>SKU ID#</label>
                        <input type="text" name="sku1" class="form-control" required>
                    </div>
                    <div class="form-group col-md-1.5">
                        <label>Gender</label>
                        <select name="gender1" class="form-control">
                            <option>Male</option>
                            <option>Female</option>
                            <option>Unisex</option>
                        </select>
                    </div>
                    <div class="form-group col-md-1.5">
                        <label>Size</label>
                        <select name="size1" class="form-control">
                            <option>XS</option>
                            <option>S</option>
                            <option>M</option>
                            <option>L</option>
                            <option>XL</option>
                        </select>
                    </div>
                    <div class="form-group col-md-1.5">
                        <label>Color</label>
                        <input type="text" name="color1" class="form-control" required>
                    </div>
                    <div class="form-group col-md-1.5">
                        <label>Image Name</label>
                        <input type="text" name="imgurl1" class="form-control" required />
                    </div>
                </div>
            </div>

            <div id="lastDiv">
                <button type="button" class="btn btn-primary" id="addJacketBtn">Add Row</button>
                <button type="button" class="btn btn-primary" id="deleteJacketBtn">Delete Row</button>
                {{!-- <input type="file" name="jacketPhotos" required multiple /> --}}
                <input type="submit" value="Submit" />
            </div>
        </form>

        {{!-- modify Page --}}
        <div class="connect-details" id="matter-2" style="display: none">
            <div class="grid-container1">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>Modify Products Info</h2>
                    </div>
                    <table id = "product-table" class = "table1">
                        <thead>
                            <tr>
                                <th>Product ID</th>
                                <th>SKU_ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Value</th>
                                <th>Category</th>
                                <th>Gender</th>
                                <th>Size</th>
                                <th>Color</th>
                                <th>Product_img</th>
                                <th>Burnaby Qty</th>
                                <th>Metro Qty</th>
                                <th>New West Qty</th>
                                <th>Richmond Qty</th>
                                <th>Surrey Qty</th>
                                <th>Vancouver Qty</th>
                            </tr>
                        </thead>

                        <tbody>
                            {{#each items}}
                            <tr>
                                <td>{{product_id}}</td>
                                <td>{{sku_id}}</td>
                                <td>{{product_name}}</td>
                                <td>{{product_desc}}</td>
                                <td>{{value}}</td>
                                <td>{{category}}</td>
                                <td>{{gender}}</td>
                                <td>{{size}}</td>
                                <td>{{color}}</td>
                                <td>{{product_img}}</td>
                                <td>{{BurnabyQuantity}}</td>
                                <td>{{MetrotownQuantity}}</td>
                                <td>{{NewWestminsterQuantity}}</td>
                                <td>{{RichmondQuantity}}</td>
                                <td>{{SurreyQuantity}}</td>
                                <td>{{VancouverQuantity}}</td>
                                <td><button type="button" class="edit btn btn-success">Edit</button>
                                    <button type="button" class="save btn btn-primary" style="display: none">Save</button>
                                    <button type="button" class="cancel btn btn-danger"style="display: none">Cancel</button>
                                </td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {{!-- Order page --}}
        <div class="connect-details" id="matter-3" style="display: none">
            <div class="grid-container">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>Recent Orders</h2>

                        <form id="filters" action="/filter" method="get" style="margin:50px 200px 0 0;">
                            <select name="category" id="list" onchange="getSelectValue();">
                                <option value="all">Select by Status</option>
                                <option value="all" value="">Show Completed</option>
                                <option value="shirts" value="Shirts">Show Pending</option>
                                <option value="backpacks" value="Backpack">Show Wait-List</option>
                                <option value="bottles" value="Bottles">Show Rejected</option>
                            </select>
                        </form>
                    </div>

                    <table>
                        <thead>
                            <tr>
                                <td>ID</td>
                                <td>Status</td>
                                <td>Date</td>
                            </tr>
                        </thead>

                        <tbody>
                            {{#each orders}}
                            <tr>
                                <td>{{order_id}}</td>
                                <td>{{status}}</td>
                                <td>{{date_submitted}}</td>
                                <td><a href=""style="color: rgb(255, 123, 0);">View</a></td>
                            <tr>
                            {{/each}}
                        </tbody>
                    </table>


                </div>
                <div class="tttt">
                    <div class="cardHeader">
                        <img src="/image/order-check.png" style="width:350px; height:350px;">
                    </div>
                </div>
            </div>
        </div>


        {{!-- Admin Page --}}
        <div class="connect-details" id="matter-4" style="display: none">
            <div class="grid-container">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2 style="margin: 0 0 0 230px;">Admin List</h2>
                    </div>

                    <table style="margin: 0 0 0 80px;">
                        <thead>
                            <tr>
                                <td>Name</td>
                                <td>Email</td>
                                <td>Role</td>
                            </tr>
                        </thead>

                        <tbody>
                            {{#each user}}
                            <tr>
                                <td>{{username}}</td>
                                <td>{{email}}</td>
                                <td><span class="status admin">{{role}}</span></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>

                </div>
                <div class="tttt">
                    <div class="cardHeader">
                        <img src="/image/admin.png" style="width:400px; height:300px;position:relative;">
                    </div>
                </div>
            </div>
        </div>

        {{!-- upload photo --}}
        <div class="connect-details" id="matter-5" style="display: none">
        <form class ="ml-5 mt-5" action="/uploadPhotos" method="post" enctype="multipart/form-data" id = "uploadForm" onsubmit="return validateForm()" >
             <input id = "files" type="file" name="productPhotos" required multiple />
             <input id = "uploadSubmit" type="submit" value="Upload"/>
        </form>
        </div>

    </div>
</div>