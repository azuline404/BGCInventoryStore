
<div class = "mt-5 ml-5">
    <h1>Order Details</h1>
    <div class="form-group row">
    <label class="ml-3 mr-3 mt-2">Requester Email</label>
    {{#each user}}
      <input class="form-control-sm mt-1" style = "width: 400px;"type="text" value={{email}}  disabled readonly>
    {{/each}}
  </div> 
    <div class="form-group row">
  <label class="ml-3 mr-3 mt-2">Current Order Status</label>
    <input class="form-control-sm mt-1" style = "width: 400px;"type="text" value={{status}} disabled readonly> 
    </div>
    {{#unless order_incomplete}}
    <div class="form-group row">
    <label class="ml-3 mr-3 mt-2">Fulfiller</label>
    <input class="form-control-sm mt-1" style = "width: 400px;"type="text" value={{fulfiller_email}} disabled readonly> 
    </div>
    {{/unless}}


<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">SKU #</th>
      <th scope="col">Product Name</th>
      <th scope="col">Product Description</th>
      <th scope="col">Gender</th>
      <th scope="col">Color</th>
      <th scope="col">Size</th>
      <th scope="col">Product Value</th>
      <th scope="col">Quantity</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{sku_id}}</th>
      <td>{{product_name}}</td>
      <td>{{product_desc}}</td>
      <td>{{gender}}</td>
      <td>{{color}}</td>
      <td>{{size}}</td>
      <td>{{value}}</td>
      <td>{{order_count}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{#if order_incomplete}}
<form action="/modifyOrder/{{order_id}}" method="post" enctype="application/x-www-form-urlencoded" class = "mt-7">
    <div class = "form-check">
        <label class="ml-n4 mt-2 display-4">New Order Status</label>
    </div>
    <div class="form-check-inline">
    <input class="form-check-input" type="radio" name="status" id="exampleRadios1" value="Submitted" required>
    <label class="form-check-label" for="exampleRadios1">
        Submitted
    </label>
    </div>
    <div class="form-check-inline">
    <input class="form-check-input" type="radio" name="status" id="exampleRadios2" value="Waitlist">
    <label class="form-check-label" for="exampleRadios1">
        Waitlist
    </label>
    </div>
    <div class="form-check-inline">
    <input class="form-check-input" type="radio" name="status" id="exampleRadios3" value="Fulfilling">
    <label class="form-check-label" for="exampleRadios2">
        Fulfilling
    </label>
    </div>
    <div class="form-check-inline">
    <input class="form-check-input" type="radio" name="status" id="exampleRadios4" value="Completed">
    <label class="form-check-label" for="exampleRadios3">
        Completed
    </label>
    </div>

    <div>
    <div class = "form-check">
        <label class="ml-n4 mt-2 display-4">Inventory deduction</label>
    </div>
    <div class="form-check-inline">
    <input class="form-check-input" type="radio" name="calculation" id="exampleRadios1" value="Manual">
    <label class="form-check-label" for="exampleRadios1">
        Manual (You edit the count yourself)
    </label>
    </div>
    <div class="form-check-inline">
    <input class="form-check-input" type="radio" name="calculation" id="exampleRadios1" value="Automatic">
    <label class="form-check-label" for="exampleRadios1">
        Automatic (subtracts based on current location stock)
    </label>
    </div>
    </div>

    <div class="mt-3 form-group row">
        <label class="ml-3 mr-3 mt-2">Fulfiller Email</label>
        <input name = "fulfiller_email" class="form-control-sm mt-1" style = "width: 400px;"type="text" value={{email}}>
    </div>  
    <input type="submit" class = "btn-md" value="Submit" />
</form>
{{/if}}
</div>