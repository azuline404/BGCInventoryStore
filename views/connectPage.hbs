        {{!-- Add product Page --}}
        <script src="/js/productsForm.js"></script>
        <form class="ml-5 mt-5" id="matter-1" action="/addProduct" method="post" enctype="multipart/form-data"
            id="jacketsForm">
            <div class="form-group">
                <label for="exampleFormControlInput1">Product Name</label>
                <input type="text" class="form-control" style="width: 800px" name="name" placeholder="Name" required>
            </div>
            <div style="height: 10px;">
                <img src="/image/add_product.png" style="margin: -70px 0 0 800px; width:200px; height: 200px;">
                <img src="/image/packaging.png" style="margin: -70px 0 0 1100px; width:80px; height: 80px;">
                <img src="/image/packaging.png" style="margin: -70px 0 0 1050px; width:80px; height: 80px;">
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Product Description</label>
                <textarea class="form-control" name="description" style="width: 800px" rows="3"
                    placeholder="Description" required></textarea>
            </div>

            <div class="form-group">
                <label for="exampleFormControlInput1">Product Value</label>
                <input type="number" class="form-control" style="width: 800px" name="value" min="0" placeholder="Value"
                    required>
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Product Category</label>
                <input type="text" class="form-control" style="width: 800px" name="category" placeholder="Category"
                    required>
            </div>
            <div id="rows-div">
                <div class="form-row">
                    <div class="form-group col-md-1.5">
                        <label>SKU ID#</label>
                        <input type="text" name="sku1" class="form-control" required>
                    </div>
                    <div class="form-group col-md-1.5">
                        <label>Gender</label>
                        <select name="gender1" class="form-control">
                            <option>Male</option>
                            <option>Female</option>
                            <option>Unisex</option>
                        </select>
                    </div>
                    <div class="form-group col-md-1.5">
                        <label>Size</label>
                        <select name="size1" class="form-control">
                            <option>XS</option>
                            <option>S</option>
                            <option>M</option>
                            <option>L</option>
                            <option>XL</option>
                        </select>
                    </div>
                    <div class="form-group col-md-1.5">
                        <label>Color</label>
                        <input type="text" name="color1" class="form-control" required>
                    </div>
                    <div class="form-group col-md-1.5">
                        <label>Image Name</label>
                        <input type="text" name="imgurl1" class="form-control" required />
                    </div>
                </div>
            </div>

            <div id="lastDiv">
                <button type="button" class="btn btn-primary" id="addJacketBtn">Add Row</button>
                <button type="button" class="btn btn-primary" id="deleteJacketBtn">Delete Row</button>
                {{!-- <input type="file" name="jacketPhotos" required multiple /> --}}
                <input type="submit" value="Submit" />
            </div>
        </form>

